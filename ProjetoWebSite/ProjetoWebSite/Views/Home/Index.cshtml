<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="~/Content/img/logo-modelo.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">

        <span>@Html.Partial("_PartialMensagens")</span>

        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginEntra", @class = "login-form" }))
        {

            <h3 class="form-title">Faça login na sua conta</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Digite qualquer nome de usuário e senha. </span>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="LoginUsuario" id="LoginUsuario" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="SenhaUsuario" id="SenhaUsuario" />
                </div>

            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" /> Lembre de mim
                    <span></span>
                </label>
                <button type="submit" class="btn green pull-right"> Entrar </button>
            </div>

            <div class="forget-password">
                <h4>Esqueceu sua senha ?</h4>
                <p>
                    não se preocupe, clique
                    <a href="javascript:;" id="forget-password"> aqui </a> para redefinir sua senha.
                </p>
            </div>

        }



        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        @using (Html.BeginForm("RecuperaSenha", "Home", FormMethod.Post, new { id = "recuperasenha", @class = "forget-form" }))
        {
            <h3>Esqueceu a senha ?</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
            </div>

            <p> Digite seu email abaixo para redefinir sua senha. </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" title="e-mail inválido" type="email" required placeholder="Adicionar um e-mail válido"  autocomplete="off"  name="EmailUsuario" id="EmailUsuario" />
                </div>
            </div>



            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red btn-outline">Retornar </button>
                <button type="submit" class="btn green pull-right"> Enviar </button>
            </div>

        }


    </div>
    <!-- END LOGIN -->
